<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/csp_toolbar" />

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/home_carousel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            app:fillColor="@color/carousel_fill_color"
            app:pageColor="@color/carousel_page_color"
            app:radius="@dimen/_6sdp"
            app:slideInterval="4000"
            app:strokeColor="@color/carousel_stroke_color"
            app:strokeWidth="@dimen/_1sdp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"
            android:background="@color/CSP_s_green"
            android:fadingEdge="vertical">

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gen_bg_color"
                android:fillViewport="true"
                android:orientation="vertical"
                android:paddingVertical="@dimen/_25sdp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:gravity="center">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/r1c1"
                            android:layout_width="@dimen/_125sdp"
                            android:layout_height="@dimen/_125sdp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:backgroundTint="@color/primary_dark"
                            app:cardCornerRadius="@dimen/_40sdp"
                            android:onClick="clickShop"
                            >


                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_marginTop="@dimen/_25sdp"
                                android:layout_gravity="center_horizontal"
                                android:backgroundTint="@color/white"
                                android:src="@drawable/ic_shop_toolbar_bg" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:orientation="horizontal"
                                android:layout_marginBottom="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="@dimen/_17sdp"
                                    android:textAlignment="center"
                                    android:text="Shop"
                                    android:textColor="@color/txt_white"
                                    android:textSize="@dimen/_15ssp" />
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_toEndOf="@+id/r1c1"
                            android:layout_width="@dimen/_125sdp"
                            android:layout_height="@dimen/_125sdp"
                            android:elevation="@dimen/_10sdp"
                            android:translationZ="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:backgroundTint="@color/primary_dark"
                            app:cardCornerRadius="@dimen/_40sdp"
                            android:onClick="clickHireServices"
                            >


                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/_25sdp"
                                android:backgroundTint="@color/white"
                                android:src="@drawable/ic_hire_services_csp_green" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:orientation="horizontal"
                                android:layout_marginBottom="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:textAlignment="center"
                                    android:text="Hire Services"
                                    android:layout_marginBottom="@dimen/_17sdp"
                                    android:textColor="@color/txt_white"
                                    android:textSize="@dimen/_15ssp" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>



                    </RelativeLayout>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:gravity="center">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/r2c1"
                            android:layout_width="@dimen/_125sdp"
                            android:layout_height="@dimen/_125sdp"
                            android:layout_gravity="center"
                            android:elevation="@dimen/_10sdp"
                            android:translationZ="@dimen/_10sdp"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:backgroundTint="@color/primary_dark"
                            app:cardCornerRadius="@dimen/_40sdp"
                            android:onClick="clickReserve"
                            >


                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_marginTop="@dimen/_25sdp"
                                android:layout_gravity="center_horizontal"
                                android:backgroundTint="@color/white"
                                android:src="@drawable/ic_reserve_toolbar_bg"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:orientation="horizontal"
                                android:layout_marginBottom="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="@dimen/_17sdp"
                                    android:textAlignment="center"
                                    android:text="Reserve"
                                    android:textColor="@color/txt_white"
                                    android:textSize="@dimen/_15ssp" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_toEndOf="@+id/r2c1"
                            android:layout_width="@dimen/_125sdp"
                            android:layout_height="@dimen/_125sdp"
                            android:elevation="@dimen/_10sdp"
                            android:translationZ="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:backgroundTint="@color/primary_dark"
                            app:cardCornerRadius="@dimen/_40sdp"
                            android:onClick="clickComplaints"
                            >


                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_marginTop="@dimen/_25sdp"
                                android:layout_gravity="center_horizontal"
                                android:backgroundTint="@color/white"
                                android:src="@drawable/ic_complaints_toolbar_bg"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:orientation="horizontal"
                                android:layout_marginBottom="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="@dimen/_17sdp"
                                    android:textAlignment="center"
                                    android:text="Complaints"
                                    android:textColor="@color/txt_white"
                                    android:textSize="@dimen/_15ssp" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>



                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:gravity="center">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/r3c1"
                            android:layout_width="@dimen/_125sdp"
                            android:layout_height="@dimen/_125sdp"
                            android:layout_gravity="center"
                            android:elevation="@dimen/_10sdp"
                            android:translationZ="@dimen/_10sdp"
                            android:backgroundTint="@color/primary_dark"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            app:cardCornerRadius="@dimen/_40sdp"
                            android:onClick="clickPayBills"
                            >


                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_marginTop="@dimen/_25sdp"
                                android:layout_gravity="center_horizontal"
                                android:backgroundTint="@color/white"
                                android:src="@drawable/ic_pay_toolbar_bg"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:orientation="horizontal"
                                android:layout_marginBottom="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="@dimen/_17sdp"
                                    android:textAlignment="center"
                                    android:text="Pay Bills"
                                    android:textColor="@color/txt_white"
                                    android:textSize="@dimen/_15ssp" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_toEndOf="@+id/r3c1"
                            android:layout_width="@dimen/_125sdp"
                            android:layout_height="@dimen/_125sdp"
                            android:elevation="@dimen/_10sdp"
                            android:translationZ="@dimen/_10sdp"
                            android:backgroundTint="@color/primary_dark"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            app:cardCornerRadius="@dimen/_40sdp"
                            android:onClick="clickProfile"
                            >


                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_marginTop="@dimen/_25sdp"
                                android:layout_gravity="center_horizontal"
                                android:backgroundTint="@color/white"
                                android:src="@drawable/ic_profile_toolbar_bg"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:orientation="horizontal"
                                android:layout_marginBottom="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="@dimen/_17sdp"
                                    android:textAlignment="center"
                                    android:text="Profile"
                                    android:textColor="@color/txt_white"
                                    android:textSize="@dimen/_15ssp" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>



                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>


        </ScrollView>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include layout="@layout/main_nav_drawer">

        </include>
    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>