<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".user_end.History">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/csp_toolbar" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gen_bg_color"
            android:fillViewport="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <ImageView
                    android:id="@+id/iv_info_history"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:onClick="changeVisibilityInfoTextHistory"
                    android:src="@drawable/ic_info" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:gravity="center">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/r1c1"
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_125sdp"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:backgroundTint="@color/primary_dark"
                        android:onClick="toShoppingHistory"
                        app:cardCornerRadius="@dimen/_40sdp">


                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/ic_shop_toolbar_bg" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="View Shopping History"
                                android:textAlignment="center"
                                android:textColor="@color/txt_white"
                                android:textSize="@dimen/_15ssp" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_125sdp"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_toEndOf="@+id/r1c1"
                        android:backgroundTint="@color/primary_dark"
                        android:onClick="toServicesHistory"
                        app:cardCornerRadius="@dimen/_40sdp">


                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/ic_hire_services_csp_green" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="View Hired     Services"
                                android:textAlignment="center"
                                android:textColor="@color/txt_white"
                                android:textSize="@dimen/_15ssp" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:gravity="center">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/r2c1"
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_125sdp"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:backgroundTint="@color/primary_dark"
                        android:onClick="toReservationsHistory"
                        app:cardCornerRadius="@dimen/_40sdp">


                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/ic_reserve_toolbar_bg" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="View Your Reservations"
                                android:textAlignment="center"
                                android:textColor="@color/txt_white"
                                android:textSize="@dimen/_15ssp" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_125sdp"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_toEndOf="@+id/r2c1"
                        android:backgroundTint="@color/primary_dark"
                        android:onClick="toComplaintsHistory"
                        app:cardCornerRadius="@dimen/_40sdp">


                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/ic_complaints_toolbar_bg" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="View         Complaints"
                                android:textAlignment="center"
                                android:textColor="@color/txt_white"
                                android:textSize="@dimen/_15ssp" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txtvw_info_history"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_75sdp"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:background="@color/grey_bg_colour"
                android:text="These controls are to guide you to view your Placed Orders, Hired Services, Reservations and Complaints."
                android:textColor="@color/txt_black"
                android:textSize="@dimen/_16ssp"
                android:visibility="invisible">

            </TextView>

        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include layout="@layout/main_nav_drawer">

        </include>
    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>