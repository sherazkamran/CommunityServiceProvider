<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_layout_signup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_dark"
        android:paddingBottom="@dimen/_25sdp">

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logo_login"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:background="@drawable/csp_logo_wg"
            android:focusable="false"
            android:longClickable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/csp_logo_wg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/edtTxt_name_signup"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Enter Name Here."
            android:inputType="text"
            android:maxWidth="@dimen/_300sdp"
            android:textColor="@color/txt_white"
            android:textColorHint="@color/txt_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_login"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_55sdp"
            android:paddingHorizontal="@dimen/_10sdp"/>

        <EditText
            android:id="@+id/edtTxt_email_signup"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:ems="10"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_55sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:fontFamily="sans-serif-condensed"
            android:hint="Enter Email Here."
            android:inputType="textEmailAddress"
            android:maxWidth="@dimen/_300sdp"
            android:textColor="@color/txt_white"
            android:textColorHint="@color/txt_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTxt_name_signup" />

        <EditText
            android:id="@+id/edtTxt_cnic_signup"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:ems="10"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_55sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:fontFamily="sans-serif-condensed"
            android:hint="Enter Cnic Here."
            android:inputType="text"
            android:maxWidth="@dimen/_300sdp"
            android:textColor="@color/txt_white"
            android:textColorHint="@color/txt_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTxt_email_signup" />

        <EditText
            android:id="@+id/edtTxt_phase_signup"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_55sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Enter Phase Number Here."
            android:inputType="number"
            android:maxWidth="@dimen/_300sdp"
            android:textColor="@color/txt_white"
            android:textColorHint="@color/txt_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTxt_cnic_signup" />

        <EditText
            android:id="@+id/edtTxt_street_signup"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_55sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Enter Street Number Here."
            android:inputType="text"
            android:maxWidth="@dimen/_300sdp"
            android:textColor="@color/txt_white"
            android:textColorHint="@color/txt_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTxt_phase_signup" />

        <EditText
            android:id="@+id/edtTxt_house_signup"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:ems="10"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_55sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:fontFamily="sans-serif-condensed"
            android:hint="Enter House Number Here."
            android:inputType="text"
            android:maxWidth="@dimen/_300sdp"
            android:textColor="@color/txt_white"
            android:textColorHint="@color/txt_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTxt_street_signup" />

        <EditText
            android:id="@+id/edtTxt_contact_signup"
            android:layout_marginHorizontal="@dimen/_55sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Enter Contact Number Here."
            android:inputType="text"
            android:maxWidth="@dimen/_300sdp"
            android:textColor="@color/txt_white"
            android:textColorHint="@color/txt_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTxt_house_signup" />

        <EditText
            android:id="@+id/edtTxt_password_signup"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_55sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:hint="Enter Password Here."
            android:inputType="textPassword"
            android:maxWidth="@dimen/_300sdp"
            android:textColor="@color/txt_white"
            android:textColorHint="@color/txt_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTxt_contact_signup" />

        <EditText
            android:id="@+id/edtTxt_re_password_signup"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_55sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:hint="Enter Password Here Again."
            android:inputType="textPassword"
            android:maxWidth="@dimen/_300sdp"
            android:textColor="@color/txt_white"
            android:textColorHint="@color/txt_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTxt_password_signup" />


        <Button
            android:id="@+id/btn_signup_signup"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:background="@drawable/btn_custom_white_rad15"
            android:fontFamily="sans-serif-condensed"
            android:text="Sign up"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textColor="@color/CSP_s_green"
            android:onClick="signUpUser"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTxt_re_password_signup" />

        <TextView
            android:id="@+id/edtTxt_already_member"
            android:layout_width="@dimen/_135sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:clickable="false"
            android:focusable="false"
            android:longClickable="false"
            android:text="Already a member?"
            android:textColor="@color/txt_white"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_login_signup"
            app:layout_constraintEnd_toStartOf="@+id/btn_login_signup"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_signup_signup" />

        <Button
            android:id="@+id/btn_login_signup"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/btn_custom_pca3_rad15"
            android:fadingEdge="horizontal"
            android:fontFamily="sans-serif-condensed"
            android:text="Log in"
            android:textColor="@color/txt_white"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintBottom_toBottomOf="@+id/edtTxt_already_member"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/edtTxt_already_member"
            app:layout_constraintTop_toBottomOf="@+id/btn_signup_signup" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>